              ["Element", "Density", { role: "style" } ],
              ["Novi oglasi", novi.valueOf(), "green"],
              ["Ističu za 3 dana", tri.valueOf(), "blue"],
              ["Istekli oglasi", istekli.valueOf(), "red"],

          ]);

          var view = new google.visualization.DataView(data);
          view.setColumns([0, 1,
              { calc: "stringify",
                  sourceColumn: 1,
                  type: "string",
                  role: "annotation" },
              2]);

          var options = {
